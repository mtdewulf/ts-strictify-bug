{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
